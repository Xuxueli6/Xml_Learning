<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Library
[
<!ELEMENT Library (Book,Member)>
<!ELEMENT Book (title,Author,Publisher,Cost)>
<!ELEMENT title (#PCDATA)>
<!ELEMENT Author (#PCDATA)>
<!ELEMENT Publisher (#PCDATA)>
<!ELEMENT Cost (#PCDATA)>
<!ELEMENT Member (Name,Address)>
<!ELEMENT Name (FirstName,MiddleName,LastName)>
<!ELEMENT FirstName (#PCDATA)>
<!ELEMENT MiddleName (#PCDATA)>
<!ELEMENT LastName (#PCDATA)>
<!ELEMENT Address (HouseNumber,Street,City)>
<!ELEMENT HouseNumber (#PCDATA)>
<!ELEMENT City (#PCDATA)>
]>

<Library>
	<!--元数据（有关数据的数据）应当存储为属性，而数据本身应当存储为元素-->
	<Book id="">
		<title></title>
		<Author></Author>
		<Publisher></Publisher>
		<Cost></Cost>
	</Book>
	<Member>
		<Name>
			<FirstName></FirstName>	
			<MiddleName></MiddleName>		
			<LastName></LastName>			
		</Name>
		<Address>
			<HouseNumber></HouseNumber>
			<Street></Street>
			<City></City>
		</Address>
	</Member>
</Library>













